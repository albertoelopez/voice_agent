# Voice Agent Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: At least one LLM provider needed
# ===========================================

# Groq API (FREE tier available - recommended)
# Get your key at: https://console.groq.com
GROQ_API_KEY=

# ===========================================
# OPTIONAL: Additional providers
# ===========================================

# OpenAI (for GPT models and TTS)
OPENAI_API_KEY=

# Deepgram (alternative STT)
DEEPGRAM_API_KEY=

# Cartesia (low-latency TTS)
CARTESIA_API_KEY=

# ===========================================
# LiveKit Configuration
# ===========================================

# For local development
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# For LiveKit Cloud (production)
# LIVEKIT_URL=wss://your-project.livekit.cloud
# LIVEKIT_API_KEY=your-api-key
# LIVEKIT_API_SECRET=your-api-secret

# ===========================================
# Local Fallback (Ollama)
# ===========================================

# Ollama host (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# ===========================================
# Provider Selection
# ===========================================

# Options: groq, deepgram, local
STT_PROVIDER=groq

# Options: groq, ollama, openai
LLM_PROVIDER=groq

# Options: cartesia, kokoro, piper, openai
TTS_PROVIDER=cartesia

# ===========================================
# Model Configuration
# ===========================================

# STT Model (for Groq)
STT_MODEL=whisper-large-v3-turbo

# LLM Model (for Groq)
LLM_MODEL=llama-3.3-70b-versatile

# Ollama Model (local fallback)
OLLAMA_MODEL=llama3.2:3b

# TTS Voice
TTS_VOICE=professional-female

# ===========================================
# Logging
# ===========================================

LOG_LEVEL=INFO
LOG_LATENCY_METRICS=true
